<div class="modal fade" id="contactsModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">thông báo kết bạn</h4>
            </div>
            <div class="modal-body">
                <ul class="nav nav-tabs">
                    <li class="active" ><a data-toggle="tab" id="link-request-contact-sent" href="#request-contact-sent">
                        Đang chờ xác nhận 
                        <% if(countAllcontactsSent > 0){ %> 
                        <span class="show-number-contacts count-request-contact-sent">
                           (<em> <%= countAllcontactsSent %> </em>)
                        </span>
                        <% } else { %> 
                            <span class="show-number-contacts count-request-contact-sent display-none">
                           
                            </span>
                        <% } %>
                    </a></li>
                    <li><a data-toggle="tab" id="link-request-contact-received" href="#request-contact-received">
                        Yêu cầu kết bạn 
                        <% if(countAllcontactsReceived > 0 ){ %> 
                        <span class="show-number-contacts count-request-contact-received">
                            (<em> <%= countAllcontactsReceived %> </em>)
                        </span>
                        <%} else { %> 
                            <span class="show-number-contacts count-request-contact-received display-none">
                            </span>
                        <% } %>
                    </a></li>
                </ul>
                <div class="tab-content">
                    <div id="request-contact-sent" class="tab-pane fade in active">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <% contactsSent.forEach(function(user){ %> 
                                    <li class="_contactList" data-uid="<%= user._id %>">
                                        <div class="contactPanel">
                                            <div class="user-avatar">
                                                <img src="images/users/<%=user.avatar %>" alt="">
                                            </div>
                                            <div class="user-name">
                                                <p>
                                                    <%= user.username %>
                                                </p>
                                                <% if( user.gender === "male" ){ %> 
                                                    <i class="fa fa-mars"></i>
                                                <%}else{ %> 
                                                    <i class="fa fa-venus"></i>
                                                <%}%>
                                            </div>
                                            <br>
                                            <div class="user-address">
                                                <span>&nbsp <%= user.address%></span>
                                            </div>
                                            <div class="user-remove-request-contact-sent action-danger display-important" data-uid="<%= user._id %>">
                                                Hủy yêu cầu
                                            </div>
                                        </div>
                                    </li>
                                <% })%>
                             
                            </ul>
                            <!-- <hr>
                            <div class="read-more-sent">
                                <a href="" id ="link-read-more-sent">
                                    <strong>xem them 10 nguoi nua</strong>
                                </a>
                                <div class="read-more-sent-loader"><div></div><div></div></div>
                            </div>
                            <hr> -->
                        </div>
                    </div>
                    <div id="request-contact-received" class="tab-pane fade">
                        <div class="find-user-bottom">
                            <ul class="contactList">
                                <% contactsReceived.forEach(function(user){ %> 
                                    <li class="_contactList" data-uid="<%= user._id %>">
                                        <div class="contactPanel">
                                            <div class="user-avatar">
                                                <img src="images/users/<%=user.avatar %>" alt="">
                                            </div>
                                            <div class="user-name">
                                                <p>
                                                    <%= user.username %>
                                                </p>
                                                <% if( user.gender === "male" ){ %> 
                                                    <i class="fa fa-mars"></i>
                                                <%}else{ %> 
                                                    <i class="fa fa-venus"></i>
                                                <%}%>
                                            </div>
                                            <br>
                                            <div class="user-address">
                                                <span>&nbsp <%= user.address %></span>
                                            </div>
                                            <div class="user-approve-request-contact-received" data-uid="<%= user._id %>">
                                                Chấp nhận
                                            </div>
                                            <div class="user-remove-request-contact-received action-danger" data-uid="<%= user._id %>">
                                                Xóa yêu cầu
                                            </div>
                                        </div>
                                    </li>
                                <% })%>
                              
                            </ul>
                            <!-- <hr>
                            <div class="read-more-received">
                                <a href="" id ="link-read-more-received">
                                    <strong>xem them 10 nguoi nua</strong>
                                </a>
                                <div class="read-more-received-loader"><div></div><div></div></div>
                            </div>
                            <hr> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>