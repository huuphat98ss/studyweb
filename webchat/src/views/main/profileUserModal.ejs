<div class="profile-modal modal fade" id="user-profile-modal" role="dialog">
<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title" id="title-profile">Tài khoản cá nhân</h4>
        </div>
        <div class="modal-body">
            <div class="profile-body">
                <div id="seting-profile" class="seting-profile">
                    <div class="row">
                        <form class="form-horizontal" method="post" role="form" action="">
                            <!-- left column -->
                            <div class="col-md-3">
                                <div class="text-center" id="div-update-avatar">
                                    <div id="image-edit-profile">
                                        <img src="images/users/<%= user.avatar%>" id="user-modal-avatar" class="avatar img-circle" alt="avatar">
                                    </div>
                                    <h6>Tải lên một ảnh mới...</h6>
                                    <input type="file" class="form-control" id="input-change-avatar" name="avatar"><br>
                                    <!-- <div id="show-button-update-avatar"></div> -->
                                </div>
                            </div>
                            <!-- edit form column -->
                            <div class="col-md-9 personal-info">
                                <div class="alert alert-danger alert-dismissable user-modal-alert-error">
                                    <!-- <a class="panel-close close" data-dismiss="alert">×</a> -->
                                    <span>Update password error example</span>
                                 
                                </div>

                                <div class="alert alert-success alert-dismissable  user-modal-alert-success">
                                    <!-- <a class="panel-close close" data-dismiss="alert">×</a> -->
                                    <span>Update password success example</span>
                                    
                                </div>
                                <br>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Email:</label>
                                    <div class="col-lg-8">
                                        <div class="form-control" disabled><%= user.local.email %></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label">Username:</label>
                                    <div class="col-md-8">
                                        <input id="input-update-username" class="form-control" type="text" name="username" value="<%= user.username %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Giới tính:</label>
                                    <div class="col-lg-8">
                                        <label class="radio-inline col-lg-2">Nam
                                            <input  type="radio" id="input-update-gender-male" name="gender" value="male" <% if(user.gender === "male"){ %> checked <% } %> >
                                         
                                        </label>
                                        <label class="radio-inline col-lg-2">Nữ
                                            <input type="radio"  id="input-update-gender-female" name="gender" value="female"  <% if(user.gender === "female"){ %> checked <% } %>  >                            
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Địa chỉ:</label>
                                    <div class="col-lg-8">
                                        <input id="input-update-address" class="form-control" type="text" name="address" value="<%= user.address %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-lg-3 control-label">Số điện thoại:</label>
                                    <div class="col-lg-8">
                                        <input id="input-update-phone" class="form-control" type="text" name="phone" value="<%= user.phone %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-3 control-label"></label>
                                    <div class="col-md-8">
                                        <input type="button" id="input-btn-update-user" class="btn btn-primary custom-background-btn-primary" name="submit" value="Lưu lại">
                                        <span></span>
                                        <input type="reset" id="input-btn-cancel-update-user"  class="btn btn-default custom-background-btn-reset" value="Hủy bỏ">
                                    </div>
                                </div>
                            </div>
                        </form>                       
                    </div>      
                    <div class="modal-footer password">
                        <a> Đổi mật khẩu</a>
                    </div>                     
                </div>                

                <div id="password-profile" class="password-profile " style="display:none">
                    <div class="alert alert-danger alert-dismissable user-modal-alert-password-error">
                        <!-- <a class="panel-close close" data-dismiss="alert">×</a> -->
                         <span>Update password error example</span>                  
                    </div>

                    <div class="alert alert-success alert-dismissable user-modal-alert-password-success">
                        <!-- <a class="panel-close close" data-dismiss="alert">×</a> -->
                        <span>Update password success example</span>                       
                    </div>
                    <br>
                    <br>
                    <div class="form-profile">
                    <form class="form-horizontal" method="post" role="form" action="">
                        <div class="form-group">
                            <label class="col-md-4 control-label">Mật khẩu cũ</label>
                            <div class="col-md-8">
                                <input id="input-update-password" class="form-control" type="password" name="current_password" placeholder="Enter your curent password...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Mật khẩu mới</label>
                            <div class="col-md-8">
                                <input  id="input-update-new-password" class="form-control" type="password" name="new_password" placeholder="Enter new password...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label">Nhập lại mật khẩu mới</label>
                            <div class="col-md-8">
                                <input  id="input-update-confirm-new-password" class="form-control" type="password" name="confirm_new_password" placeholder="Enter confirm new password...">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label"></label>
                            <div class="col-md-8">
                                <input type="button"  id="input-btn-update-user-password" class="btn btn-primary custom-background-btn-primary" value="Lưu lại">
                                <span></span>
                                <input type="button" id="input-btn-cancel-update-user-password" class="btn btn-default custom-background-btn-reset" value="Hủy bỏ">
                            </div>
                        </div>
                    </form>
                    </div>
                    <div class="modal-footer profile">
                        <a>Tài khoản cá nhân</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>