<div class="modal fade" id="contacts" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Danh sách bạn bè</h4>
                 <!--du dinh la readtime tinh so nguoi onl-->
            </div>
            <div class="modal-body">
                <div class="tab-pane fade in active">
                    
                        <ul class="contactList">
                            <% contacts.forEach(function(user){ %> 
                                <li class="_contactList" data-uid="<%= user._id %>">
                                    <div class="contactPanel">
                                        <div class="user-avatar">
                                            <img src="images/users/<%= user.avatar %>" alt="err">
                                        </div>
                                        <div class="user-name">
                                            <p>
                                                <%= user.username %>
                                            </p>
                                            <% if( user.gender === "male" ){ %> 
                                                <i class="fa fa-mars"></i>
                                            <%}else{ %> 
                                                <i class="fa fa-venus"></i>
                                            <%}%>
                                        </div>
                                        <br>
                                        <div class="user-address">
                                            <span>&nbsp <%= user.address %></span>
                                        </div>
                                        <div class="talk-with-user" data-uid="<%= user._id %>">
                                            Trò chuyện
                                        </div>
                                        <div class="user-remove-contact action-danger" data-uid="<%= user._id %>">
                                            Xóa liên hệ
                                        </div>
                                    </div>
                                </li>
                            <% })%>                       
                        </ul>
                        <hr>
                            <div class="read-more-contacts">
                                <a href="javascript:void(0)" id ="link-read-more-contacts">
                                    <strong>xem them 10 ban</strong>
                                </a>
                            </div>
                        <hr>
                </div>
            </div>
            </div>
        </div>
</div>