<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>web-chat</title>
    <link rel="stylesheet" href="bower/bootstrap/dist/css/bootstrap.min.css">
    <link href="css/auth.css" rel="stylesheet" />

    <script src="bower/jquery/dist/jquery.min.js"></script>
    <script src="bower/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="js/authConfig.js" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 my-content">
            <div class="row">
                <div class="col-sm-12">
                    <div class="login">                    
                            <div class="content">
                                <div class="header">                                  
                                    <h1 class="title">Đăng nhập</h1>
                                </div>
                                <div class="body">
                                    <% if(errorsregister != "") { %> 
                                        <% errorsregister.forEach((item)=>{ %> 
                                            <script>openRegisterModal()</script>
                                            <div class="alert alert-danger"><%- item %></div>
                                        <% }); %>
                                    <% } %>
                                    <% if(errors != "") { %> 
                                        <% errors.forEach((item)=>{ %> 
                                            <script> openLoginModal()</script>
                                            <div class="alert alert-danger"><%- item %></div>
                                        <% }); %>
                                    <% } %> 
                                    <% if(success != "") { %> 
                                        <% success.forEach((item)=>{ %> 
                                            <script>openLoginModal()</script>
                                            <div class="alert alert-success"><%- item %></div>
                                        <% }); %>
                                    <% } %>
                                    <div class="box">
                                        <div class="content loginBox">
                                            <div class="form ">
                                                <form method="POST" action="/login">
                                                    <input type="text" name="email" placeholder="Email" class="form-control" required>
                                                    <input type="password" name="password" placeholder="Password" class="form-control" required>
                                                    <div class="press-login-register text-center">
                                                        <input type="submit" value="Đăng nhập" class="btn btn-default btn-primary">
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="content registerBox" style="display:none;">
                                            <div class="form">
                                                <form method="post" html="{:multipart=>true}" data-remote="true" action="/register" accept-charset="UTF-8">
                                                    <input id="email" class="form-control" type="text" placeholder="Email" name="email" required>
                                                    <div class="radio-box">
                                                    &nbsp;<label class="radio-inline"><input type="radio" name="gender" value="male" checked required> Nam</label>&nbsp;
                                                    &nbsp;<label class="radio-inline"><input type="radio" name="gender" value="female" required> Nữ</label>&nbsp;
                                                    </div>
                                                    <input id="password" class="form-control" type="password" placeholder="Password" name="password" required>
                                                    <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="password_confirmation" required>
                                                    <div class="press-login-register text-center">
                                                        <input class="btn btn-default btn-primary" type="submit" value="Tạo tài khoản" name="commit">
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>                        
                                </div>
                                <div class="footer text-center">
                                    <div class="forgot login-footer">
                                        <span>Bạn chưa có tài khoản?
                                        <a href="javascript: showRegisterForm();">Tạo một tài khoản mới</a>
                                        </span>
                                    </div>
                                    <div class="forgot register-footer" style="display:none">
                                        <span>Bạn đã có tài khoản?</span>
                                        <a href="javascript: showLoginForm();">Đăng nhập</a>
                                    </div>
                                </div>
                            </div>                     
                    </div>               
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</body>
</html>
